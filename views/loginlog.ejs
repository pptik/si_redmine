  <script>
    function getMonthName(monthNumber) {
      const date = new Date();
      date.setMonth(monthNumber - 1);
    
      return date.toLocaleString('id', { month: 'long' });
    }
    
      $(function () {
    
        
    
      
    
    
    
        var lm = '<%- JSON.stringify(login_monthly) %>';
        var lj = JSON.parse(lm);
        var label = []
        var dt = []
        lj.forEach(element => {
          // console.log(element._id)
          label.push(getMonthName(element._id))
          dt.push(element.numberoflogin)
        });
        console.log(lm);
    
    
        var ld = '<%- JSON.stringify(login_daily) %>';
        var dj = JSON.parse(ld);
        var label_daily = []
        var dt_daily = []
        dj.forEach(element => {
          // console.log(element._id)
          label_daily.push(element._id)
          dt_daily.push(element.numberoflogin)
        });
        console.log(ld);
    
    
        const ctx = document.getElementById('bar-monthly');
        const labelss = label;
        new Chart(ctx, {
        type: 'bar',
        data: {
          labels: labelss,
          datasets: [{
        label: 'Jumlah Login',
        data: dt,
        backgroundColor: [
          'rgba(255, 99, 132, 0.2)',
          'rgba(255, 159, 64, 0.2)',
          'rgba(255, 205, 86, 0.2)',
          'rgba(75, 192, 192, 0.2)',
          'rgba(54, 162, 235, 0.2)',
          'rgba(153, 102, 255, 0.2)',
          'rgba(201, 203, 207, 0.2)'
        ],
        borderColor: [
          'rgb(255, 99, 132)',
          'rgb(255, 159, 64)',
          'rgb(255, 205, 86)',
          'rgb(75, 192, 192)',
          'rgb(54, 162, 235)',
          'rgb(153, 102, 255)',
          'rgb(201, 203, 207)'
        ],
        borderWidth: 1
      }]
        },
        options: {
          scales: {
            y: {
              beginAtZero: true
            }
          }
        }
      });
    
      const ct = document.getElementById('daily-login');
        const labe = label_daily;
        new Chart(ct, {
          type: 'line',
          data: {
                  labels: labe,
                  datasets: [{
                    label: 'Jumlah Login',
                    data: dt_daily,
                    fill: false,
                    borderColor: 'rgb(75, 192, 192)',
                    tension: 0.1
                  }]
                },
          options: {
            legend: {
            display: false
          },
            scales: {
            xAxes: [{
                display: true,
                scaleLabel: {
                    display: true,
                    labelString: 'Tanggal'
                }
            }],
            yAxes: [{
                display: true,
                scaleLabel: {
                    display: true,
                    labelString: "Jumlah Login"
                }
            }]
        }
          }
        })


        $("#example1").DataTable({
      "responsive": true, "lengthChange": false, "autoWidth": false, "order": [], "pageLength": 5,
      // "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
    });
    
   
    })
    </script>