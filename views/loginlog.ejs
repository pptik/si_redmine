<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Log Login</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item active">Log Login</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-6">
          <!-- Tes Bar -->
            <div class="card card-danger">
              <div class="card-header">
                <h3 class="card-title">Login Tahun <%= new Date().getFullYear() %>  </h3>

                <div class="card-tools">
                  <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                  </button>
                  <button type="button" class="btn btn-tool" data-card-widget="remove">
                    <i class="fas fa-times"></i>
                  </button>
                </div>
              </div>
              <div class="card-body">
                <canvas id="bar-monthly" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          <!-- Table -->
            <div class="card card-danger">
              <div class="card-header">
                <h3 class="card-title">Login Log</h3>

                <div class="card-tools">
                  <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                  </button>
                  <button type="button" class="btn btn-tool" data-card-widget="remove">
                    <i class="fas fa-times"></i>
                  </button>
                </div>
              </div>
              <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                  <tr>
                    <th>Tahun</th>
                    <th>Bulan</th>
                    <th>Jumlah Akses</th>
                    <th>Detail</th>
                  </tr>
                  </thead>
                  <tbody>
                    <% function getMonthName(monthNumber) {
                      const date = new Date();
                      date.setMonth(monthNumber - 1);
                    
                      return date.toLocaleString('id', { month: 'long' });
                    }

                       %> 
                    <% all_login.forEach(element => { %>
                      <tr>
                        <td><%=element._id.year %></td>
                        <td><%= getMonthName (element._id.month) %></td>
                        <td><%=element.numberoflogin %></td>
                        <td><a href="/loginlog/<%=element._id.year %>/<%= element._id.month %>"><i class = "fas fa-search"></i></a></td>
                      </tr>
                      
                    <% });  %> 
                  </tbody>
                  
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
            
          </div>
          <!-- /.col (LEFT) -->
          <div class="col-md-6">
            <!-- BAR CHART -->
            <div class="card card-success">
              <div class="card-header">
                <h3 class="card-title">Login Bulan <%= getMonthName(bulan) %> 
                <%= tahun %></h3>

                <div class="card-tools">
                  <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                  </button>
                  <button type="button" class="btn btn-tool" data-card-widget="remove">
                    <i class="fas fa-times"></i>
                  </button>
                </div>
              </div>
              <div class="card-body">
                <div class="chart">
                  <canvas id="daily-login" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                </div>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
            <div class="card card-success">
              <div class="card-header">
                <h3 class="card-title">Top Login <%= getMonthName(bulan) %>
                  <%= tahun %></h3>
  
                <div class="card-tools">
                  <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                  </button>
                  <button type="button" class="btn btn-tool" data-card-widget="remove">
                    <i class="fas fa-times"></i>
                  </button>
                </div>
              </div>
              <div class="card-body table-responsive p-0">
                <table class="table table-striped table-valign-middle">
                  <thead>
                  <tr>
                    <th>Nama</th>
                    <th>Jumlah Login</th>
                  </tr>
                  </thead>
                  <tbody>
                    <%var i =0; login_user.forEach(user => {i++ %>
                      <tr>
                        <td>
                          <img src="/dist/img/avatar5.png" alt="Product 1" class="img-circle img-size-32 mr-2">
                          <%= user.user_name %>
                        </td>
                        <td><%= user.numberoflogin %></td>
                      </tr>
                      
                    <%}); %> 
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
          </div>
          <!-- /.col (RIGHT) -->
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
